          <script >
            function checkform(){
                  // alert('准备提交');


                  function verify_username(){
                    var userName1 = document.getElementById('username').value;

                     if (userName1=='') {
                   alert('用户名不能为空');
                   return false;}

                    return true;
                      }
              
              
              
                  function verify_password(){
                    var  password=document.getElementById('password').value
                      var  password2=document.getElementById('password2').value

                        if (password=='') {
                        alert('请输入密码')

                        return false;
                           
                      };
                      if (password != password2) {
                        alert('密码不一致，请重新输入') 
                        return false;  
                      };
                       return  true;
                  }
              
            function verify_gender(){
                    var genders= document.getElementsByName('gender');
                    var genderval='';

                    for (var i = 0; i< genders.length;i++) {
                        
                        if (genders[i].checked){
                         genderval=genders[i].value

                        };

                    };
                      if (genderval=='') {

                        alert('请选择性别');
                        return false;
                      };
                          return true;

            }

           
             // 密保问题必须选中一个

             function verify_qa(){
                var qa = document.getElementById('qa').value;
             if(qa < 0){
              alert('密保问题必须选中一个');

              return false;

            };
               return true;

             }
            
            function  verify_useranswer(){
                var useranswer = document.getElementById('useranswer').value

              if (useranswer=='') {
              alert('请输入密保答案');
              return  false;
              } 
                return true;
            }
            function  verify_pro(){
            var protocol = document.getElementById('protocol').checked;
            if(!protocol){
              alert('必须同意注册协议才能提交');
              return false;
            };    
              return true;
            }
            
            

          // 调用函数
               var username2 = verify_username();{
